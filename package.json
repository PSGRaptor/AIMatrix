{
  "name": "aimatrix",
  "version": "0.1.0",
  "description": "All-in-one desktop AI launcher and manager",
  "main": "app/main/main.js",
  "author": "Badaxiom",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"vite --config vite.config.ts\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "vite build && tsc -p app/main/",
    "watch:main": "tsc --watch --project tsconfig.json",
    "start": "electron ."
  },
  "dependencies": {
    "electron": "^29.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.4.2",
    "@types/react": "^18.2.6",
    "@types/react-dom": "^18.2.4",
    "@vitejs/plugin-react": "^4.5.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.0",
    "vite": "^6.3.5",
    "wait-on": "^8.0.3"
  }
}
