{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["dom", "es2020"],
    "jsx": "react-jsx",
    "outDir": "./app",
    "rootDir": "./app",
    "strict": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": "."
  },
  "include": [
    "app/renderer/env.d.ts",
    "app/renderer/types/svg.d.ts",
    "app/**/*",
    "app/renderer"
  ],

  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".vite",
    "*.tsbuildinfo"
  ]
}
